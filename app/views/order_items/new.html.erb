<% if @item.errors.present? %>
<p> The following error preventeed your menu item for being saved</p>
<ul> 
<% @item.errors.full_messages.each do |message| %>
<li> <%= messages %> </li>
<% end %>
</ul>
<%  end %> 

<%= form_tag(order_items_path) do %>
<div class="block">
    <label for="menuid">Menu id:
    <%=select_tag :menu_id, options_from_collection_for_select(Menu.all, :id, :name, @item.menu_id) %>
    </label> <br> </br>
    
</div>
<div class="block">
    <label for="orderid">Order id:
    <%=select_tag :order_id, options_from_collection_for_select(Order.all, :id, :name, @item.order_id) %>
    </label> <br> </br>
<div class="block">
    <label for="quantity">Quantity:
    <%=select_tag :quantity, options_for_select([1, 2 , 3, 4, 5, 6], @item.quantity) %> 
    
    </label> <br> </br>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default"> Submit </button>
    </div>
</div>
<% end %>